;数据增加时的提示信息
@k1011AddPalamInfo, nameOfPalam, addNum, chara
	#DIMS nameOfPalam
	#DIM addNum
	#DIM chara
	;没有增加值
	SIF !addNum
		RETURN
	PRINTFORM %@"%nameOfPalam%之珠", 10, LEFT% \@addNum > 0 ? + # -\@ {ABS(addNum), 10, LEFT} 
	;设置角色颜色
	PRINT (
	CALLF k1011ACharaColor, chara
	PRINTS CALLNAME:chara
	RESETCOLOR
	PRINTL )

