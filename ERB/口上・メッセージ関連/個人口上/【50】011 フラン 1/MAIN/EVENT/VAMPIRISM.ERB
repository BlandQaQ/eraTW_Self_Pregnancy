;--------------------------------------------------
;吸血
;--------------------------------------------------
@k1011Vampirism
	IF k1011IsVampirism(MASTER)
		CALL k1011GP("W", @"作为回礼、%CALLNAME:MASTER%咬住芙兰雪白纤细的脖子")
		CALL k1011AddExp("吸血经验", 1)
	ENDIF
	CALL k1011AddBase("体力", k1011GetMaxbase("体力") - k1011GetBase("体力"))
	CALL k1011AddBase("气力", k1011GetMaxbase("气力") - k1011GetBase("气力"))
	CALL k1011AddExp("吸血经验", 1, MASTER)
	CALL k1011AddJuel("恭顺", 5000)
	CALL k1011AddJuel("欲情", 4000)
	CALL k1011AddJuel("习得", 1500)
	CALL k1011GWait()
	;吸血次数增加
	K1011VampirismTimes ++
	RETURN 0

