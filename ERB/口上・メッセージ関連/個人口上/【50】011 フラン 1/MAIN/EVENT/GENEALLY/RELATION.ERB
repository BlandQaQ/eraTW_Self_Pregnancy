;使魔
@k1011Servant
	IF !K1011EventFirst:使魔
		CALL k1011GPC("W", @"「使魔？」", TARGET)
		CALL k1011GPC("W", @"「要把%k1011Name(TARGET, TARGET)%变成那样啊？就像帕秋莉旁边的小恶魔一样吗?」", TARGET)
		;天真
		IF K1011Character == 1
			CALL k1011GPC("W", @"「要是能帮到%k1011Name(TARGET, MASTER)%的话、当然可以」", TARGET)
			CALL k1011GPC("W", @"「但是%k1011Name(TARGET, TARGET)%不知道怎么做啊……」", TARGET)
		;早熟
		ELSEIF K1011Character == 2
			CALL k1011GPC("W", @"「既然是%k1011Name(TARGET, MASTER)%的要求啊」", TARGET)
			CALL k1011GPC("W", @"「大丈夫♪」", TARGET)
		ENDIF
		K1011EventFirst:使魔 = 1
	ELSE
		CALL k1011GPC("W", @"「又要%k1011Name(TARGET, TARGET)%当使魔了啊」", TARGET)
		CALL k1011GPC("W", @"「好开心……这样%k1011Name(TARGET, TARGET)%可以更好的感受%k1011Name(TARGET, MASTER)%了」", TARGET)
	ENDIF

