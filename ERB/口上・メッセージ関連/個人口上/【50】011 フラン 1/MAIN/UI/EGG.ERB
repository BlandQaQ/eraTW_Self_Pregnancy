@k1011prologueBack
	#DIM DYNAMIC mod
	#DIM DYNAMIC bgRgb
	#DIM bookAlpha
	#DIM textAlpha
	#DIM refishTime
	#DIM DYNAMIC bookImgId
	#DIMS text, 3
	#DIM page
	#DIM CONST maxPage = 3
	#DIM clearL
	#DIM newPage
	#DIMS CONST bookImg = "f", "of1", "of2", "of3", "of4", "of5", "o", "oo1", "oo2", "oo3", "oo4", "oo5"
	#DIM DYNAMIC alpha
	;文字赋值
	;--------------------------------------------------
	;感谢穆迪大佬写的文言文
	;--------------------------------------------------
	;第一页
	text:0 += @"%align_text("东方调教典", 26, 2)%%UNICODE(10)%"
	text:0 += @"%UNICODE(10)%"
	text:0 += @"%align_text("序", 26, 2)%%UNICODE(10)%"
	text:0 += @"%UNICODE(10)%"
	text:0 += @"    余本无名姓、鄙生不毛地、姑获怜我体、鸟越村边衔。余、鸟越九郎。养母玄衣、上有八姊、皆山魈树精之属。盖因人妖之殊、每至沐浴安眠时尝戏余、以少女豆蔻授余以世间极乐。%UNICODE(10)%"
	text:0 += @"    及总角、山外大名蔑余母窃人之子、污我母、掳吾姊、收余为子。同年巧月、吾母丧、八姊疯、不知所踪。%UNICODE(10)%"
	text:0 += @"    及冠之年、吾为大名手下人牙之师、手下卖小者不计其数。偶结友、名胜、其人诡秘、游颠乾坤。一日酒后闻余过往、叹曰:「可愿与我同道？」召素裸狐女、命之而去。未及三更、大名府内鸡犬不闻。余悲喜交集、遂随胜同游。%UNICODE(10)%"
	text:0 += @"    三年游芳、吾与胜遍历群岛、大妖雌伏者不计其数。偶遇奇门结界、其内妖魔甚众、皆作少女之形。余二人见猎心喜、入之调伏。却有巫女号博丽、拦吾二人。此女美艳、天生神力、擅符法。胜本不惧、然其倏引结界之力、兼隙间之妖阻余援救、竟遭阴阳玉生毙。余大骇、携胜遗体夺命奔逃。余随胜三年、亦师亦友、竟未料遭此横祸！余痛定思痛、精研胜所传阴阳术、汲各妖仆"
	text:1 += @"所长、自创符咒、卧薪尝胆以待时机。%UNICODE(10)%"
	text:1 += @"    逢间隙妖征月、结界空虚、携众妖奴与博丽交手。初故作不敌、忽以咒法创小世界、断结界之力、封其符法、咒縛其身、胜之。然其心智坚毅、虽为吾阶下囚、仍昼夜辱骂不休、用极刑、至晕死未出一言。使干柴散与其交媾、半月滴水未食。此女心智不移、实乃余生平仅见。心下敬之、遂囚于牢中、温以待之、每夜磋磨。%UNICODE(10)%"
	text:1 += @"    大仇已报、余于结界之中创调教之道、建淫冥书屋传道天下人牙。收弟子真败、为祭吾师、取名「胜」。%UNICODE(10)%"
	text:1 += @"    七年秋、隙间征月兵败、退守结界、骤闻博丽噩耗、怒极、寻至余山门、余设计以咒法封之。然间隙之力诡谲、竟致咒法反噬、余呕血而走。%UNICODE(10)%"
	text:1 += @"    此后匿于山中、如丧家之犬、深感大限将至…时博丽已有身孕、反发之心日盛。余时日无多、遂故作不察、放其遁走…%UNICODE(10)%"
	text:1 += @"    端月、寻余弟子真败胜、胜至余身前久久顿首。余传其调教典、乃吾毕生心血所集、其内符咒自成一方天地、非持有之人入内、皆真灵蒙昧、跌落凡尘。嘱其传复本于淫冥书屋、静候间隙出手。复本毁则诡秘白、窥其秘则咒法全、可"
	text:2 += @"封而胜之。望后世继吾道之人秉持吾念、降伏天下雌妖。%UNICODE(10)%"
	text:2 += @"    天下诡怪千万、余以残生卜算后世。有一混沌之魔、金发赤眼、喜食人血、作垂髫少女像、娇媚百态、然其混沌之力破坏万物、未有能当者、吾之咒法亦难抵其万一。后世继吾道统者、万不可遭其惑、遇之则杀、迟则生变。切记切记！%UNICODE(10)%"
	;打印书
	ALIGNMENT CENTER
	WHILE 1
		;打印书
		IF mod != 0 && mod != 8
			IF bookImg:bookImgId == "o"
				CALL k1011DrawBookText, text:page, bookAlpha, textAlpha
			ELSE
				CALL k1011DrawBook, bookImg:bookImgId, bookAlpha
			ENDIF
		ENDIF
		;操作
		SELECTCASE mod
			;清空桌面
			CASE 0
				;动画
				IF cartoon_play()
					refishTime = 5
					bgRgb += 24
					SETBGCOLOR rgb_to_hex(LIMIT(bgRgb, 0, 216), LIMIT(bgRgb, 0, 216), LIMIT(bgRgb, 0, 216))
					SIF bgRgb >= 192
						CLEARLINE LINECOUNT
					SIF bgRgb >= 216
						mod = 1
				;无动画
				ELSE
					refishTime = 0
					SETBGCOLOR rgb_to_hex(216, 216, 216)
					CLEARLINE LINECOUNT
					mod = 1
				ENDIF
			;书出现
			CASE 1
				clearL = 1
				;动画
				IF cartoon_play()
					bookImgId = 0
					refishTime = 15
					bookAlpha += 10
					SIF bookAlpha > 400
						mod = 2
				;无动画
				ELSE
					refishTime = 0
					bookAlpha = 255
					mod = 2
				ENDIF
			;书打开
			CASE 2
				;动画
				IF cartoon_play()
					bookImgId += 1
					refishTime = 100
					SIF bookImg:bookImgId == "o"
						mod = 3
				;无动画
				ELSE
					refishTime = 0
					bookImgId = 6
					mod = 3
				ENDIF
			;书显示文字
			CASE 3
				;动画
				IF cartoon_play()
					refishTime = 15
					textAlpha += 20
					SIF textAlpha > 255
						mod = 4
				;无动画
				ELSE
					refishTime = 0
					textAlpha = 255
					mod = 4
				ENDIF
			;等待下一页
			CASE 4
				FORCEWAIT
				IF page < maxPage - 1
					newPage = page + 1
				ELSE
					newPage = -1
				ENDIF
				mod = 5
			;文字消失
			CASE 5
				;动画
				IF cartoon_play()
					refishTime = 15
					textAlpha -= 40
					IF textAlpha < 0
						refishTime = 100
						mod = 6
					ENDIF
				;无动画
				ELSE
					refishTime = 0
					mod = 6
				ENDIF
			;翻页动画
			CASE 6
				;动画
				IF cartoon_play()
					IF bookImgId >= 11
						bookImgId = 6
						IF newPage == -1
							DEBUGPRINTL 跳转至7
							mod = 7
						ELSE
							page = newPage
							DEBUGPRINTL 跳转至3
							mod = 3
						ENDIF
					ELSE
						bookImgId += 1
					ENDIF
				;无动画
				ELSE
					IF bookImgId >= 11
						bookImgId = 6
						IF newPage == -1
							mod = 7
						ELSE
							page = newPage
							mod = 3
						ENDIF
					ELSE
						bookImgId += 1
					ENDIF
				ENDIF
			;书本疯狂翻页+消失动画
			CASE 7
				;动画
				IF cartoon_play()
					refishTime -= 20
					refishTime = MAX(refishTime, 1)
					IF refishTime < 50
						bookAlpha = LIMIT(bookAlpha, 0, 255)
						bgRgb += 5
						SIF bookAlpha
							bookAlpha -= 48
						SETBGCOLOR rgb_to_hex(LIMIT(bgRgb, 0, 255), LIMIT(bgRgb, 0, 255), LIMIT(bgRgb, 0, 255))
					ENDIF
					mod = 6
					SIF bgRgb >= 275
						mod = 8
				ELSE
					mod = 8
				ENDIF
			;颜色变暗
			CASE 8
				bgRgb -= 24
				SETBGCOLOR rgb_to_hex(LIMIT(bgRgb, 0, 255), LIMIT(bgRgb, 0, 255), LIMIT(bgRgb, 0, 255))
				SIF bgRgb < 0
					BREAK
		ENDSELECT
		TWAIT refishTime, 0
		REDRAW 0
		SIF clearL
			CLEARLINE LINECOUNT
	WEND
	RESETCOLOR
	ALIGNMENT LEFT
	SIF MESSKIP()
		FORCEWAIT
	PRINTFORMW 当%CALLNAME:MASTER%从书中回过神时、自己已经出现在了这个奇怪的屋子里
	CALL k1011GPC("W", "「哈、这是什么鬼地方?」", MASTER)
	CALL k1011GPC("W", "「……如果那本书说的是真的……我岂不是成了网文猪脚?」", MASTER)
	CALL k1011GPC("W", "「总算可以告别什么工作学习了。异世界、我来了」", MASTER)
	CALL k1011GPC("W", "「等等、好像开局就欠了100w」", MASTER)
	CALL k1011GPC("L", "「为啥人家穿越都有系统、我穿越就欠了100w」", MASTER)
	CALL k1011GPC("W", "「老天不公啊」", MASTER)
	PRINTL
	WHILE 1
		CALL a_resetcolor, alpha
		PRINTL 　　　　　　　　―― Prologue No.1011 -(网文穿越剧?)- (eratohoYMAEM)
		SIF alpha >= 255
			BREAK
		IF cartoon_play()
			alpha += 5
		ELSE
			alpha = 255
		ENDIF
		TWAIT 15, 0
		CLEARLINE 1
	WEND
	WAIT

