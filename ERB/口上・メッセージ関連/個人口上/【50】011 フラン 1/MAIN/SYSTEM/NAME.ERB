	PRINTL 
	line = LINECOUNT
	WHILE 1
		INPUTS
		STRLENS RESULTS
		IF RESULT > 14
			CALL k1011GPC("L", @"「你的名字太长了、芙兰记不住哦」", TARGET)
			CONTINUE
		ELSEIF RESULTS == ""
			CONTINUE
		ELSE
			IF RESULTS == "芙兰"
				CALL k1011GPC("L", @"「你也叫芙兰吗？」", TARGET)
