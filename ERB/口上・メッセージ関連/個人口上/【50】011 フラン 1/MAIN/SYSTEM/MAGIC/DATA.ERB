;魔法类型数据
@k1011MagicData, magicType, magicName, magicInfo, magicCost, magicLCost, magicId, magicIndex
	#DIM REF magicId
	#DIMS REF magicType
	#DIMS REF magicName
	#DIMS REF magicInfo
	#DIM REF magicCost
	#DIM REF magicLCost
	#DIM REF magicIndex
	#DIM index
	;阴道封印
	FOR index, 0, K1011_MAGIC_MAX_TYPE
		RESULT = 0
		TRYCALLFORM k1011MCondition{index}
		IF RESULT
			magicName:magicIndex '= K1011MName:index
			magicId:magicIndex = index
			magicType:magicIndex '= K1011MType:index
			magicInfo:magicIndex '= K1011MInfo:index
			magicCost:magicIndex = K1011MCost:index
			magicLCost:magicIndex = K1011MLCost:index
			magicIndex ++
		ENDIF
	NEXT
