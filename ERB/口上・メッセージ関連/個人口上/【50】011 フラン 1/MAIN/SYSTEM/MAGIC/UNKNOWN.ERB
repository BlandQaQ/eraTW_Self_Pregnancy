;体力恢复
@k1011UMagic3
	#DIM DYNAMIC hp = 100
	#DIM index
	#DIM loseHp
	DEBUGPRINTL 体力恢复被调用
	FOR index, 0, CHARANUM
		loseHp = MAXBASE:index:0 - BASE:index:0
		SIF loseHp == 0
			CONTINUE
		;有溢出
		IF loseHp < hp
			BASE:index:0 += loseHp
			hp -= loseHp
		;回不满
		ELSE
			BASE:index:0 += hp
			RETURN 1
		ENDIF
	NEXT
	IF hp == 100
		RETURN 0
	ELSE
		RETURN 1
	ENDIF
