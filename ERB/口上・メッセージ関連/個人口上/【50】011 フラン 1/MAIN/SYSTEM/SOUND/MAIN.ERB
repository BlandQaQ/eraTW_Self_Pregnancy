;类型
;Pain			苦痛
;Orgasm		高潮
;Happy		娇喘
;Mouth		接吻/口交
;MouthShout	口内射精
;通用片段
@k1011SoundPhrase(type, long = 1, end = 0)
	#FUNCTIONS
	#DIMS type
	#DIM long
	#DIM index
	#DIM end
	#DIMS DYNAMIC outs
	SIF long <= 0
		THROW [芙兰口上ERROR]随机声音,句长小于1
	FOR index, 0, long
		outs += STRFORM(@"\%k1011%type%SoundWord()\%")
		outs += STRFORM(@"\%k1011%type%SoundMark()\%")
	NEXT
	RETURNF outs

;痛苦片段
@k1011PainPhrase(long, end = 1)
	#FUNCTIONS
	#DIM long
	#DIM end
	#DIMS DYNAMIC outs
	#DIM index
	SIF end
		long --
	IF long
		FOR index, 0, long
			IF (k1011GetAbl("受虐感") + 5) > 4
				outs += k1011SoundPhrase("Happy", 1)
			ELSE
				outs += k1011SoundPhrase("Pain", 1)
			ENDIF
		NEXT
	ENDIF
	IF end
		outs += k1011PainSoundWord()
		outs += k1011PainSoundMarkEnd()
	ENDIF
	RETURNF outs

