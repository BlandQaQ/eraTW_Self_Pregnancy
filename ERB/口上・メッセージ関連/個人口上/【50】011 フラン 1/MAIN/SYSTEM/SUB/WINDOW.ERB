@k1011AskYn, text = "你确定吗?"
	#DIM DYNAMIC alpha
	#DIM line
	#DIMS text
	#DIM DYNAMIC mod
	#DIM out
	line = LINECOUNT
	WHILE 1
		CALL a_resetcolor, alpha
		PRINTSL text
		PRINTL [0] 否    [1] 是
		SELECTCASE mod
			;出现
			CASE 0
				IF cartoon_play()
					alpha += 50
					SIF alpha > 255
						mod = 1
				ELSE
					alpha = 255
					mod = 1
				ENDIF
			;等待
			CASE 1
			;消失
			CASE 2
				IF cartoon_play()
					alpha -= 50
					SIF alpha < 0
						BREAK
				ELSE
					alpha = 0
					BREAK
				ENDIF
		ENDSELECT
		TINPUT 15, -1, 0, ""
		SELECTCASE RESULT
			CASE 0, 1
				out = RESULT
				mod = 2
		ENDSELECT
		CLEARLINE LINECOUNT - line
	WEND
	RESETCOLOR
	CLEARLINE LINECOUNT - line
	RETURN out

