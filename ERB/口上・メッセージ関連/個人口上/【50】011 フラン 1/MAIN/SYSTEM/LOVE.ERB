;tw纯爱判断
;-------------------------------------------
@k1011TwLoveCheck()
	;本来就不喜欢
	SIF !k1011Love()
		RETURN
	;没恋人
	SIF !k1011GetTalent("恋人")
		RETURN
	;没其他恋人
	SIF (GROUPMATCH(FINDCHARA(TALENT:7, 1), -1, TARGET) && GROUPMATCH(FINDLASTCHARA(TALENT:7, 1), -1, TARGET))
		RETURN
	K1011Sale |= 1p0
	SAVEGLOBAL
	CALL k1011ReallyLoveCheck()
