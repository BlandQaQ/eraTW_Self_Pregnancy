	RESETCOLOR
	PRINTL [0] 喜欢	[1] 一般般吧	[2] 不要再来问了、我不感兴趣
	WHILE 1
		INPUT
		IF RESULT == 0
			;判断是否真的喜欢芙兰
			CALL k1011ReallyLoveCheck()
			K1011LoveFlan = 1
			BREAK
		ELSEIF RESULT == 1
			K1011LoveFlan = 0
			BREAK
		ELSEIF RESULT == 2
			LINE_2 = LINECOUNT
			PRINTFORML 你确定吗
			PRINTL [0] 不确定	[1] 确定
			WHILE 1
				INPUT
				IF RESULT == 0
					BREAK
				ELSEIF RESULT == 1
					K1011LoveFlan = -1
					BREAK
				ELSE
					REUSELASTLINE 原来二选一这么难啊
				ENDIF
			WEND
			CLEARLINE LINECOUNT - LINE_2
			SIF K1011LoveFlan == -1
				BREAK
		ELSE
			REUSELASTLINE 你有选择困难症吗?
		ENDIF
	WEND
	RESETBGCOLOR
	CLEARLINE LINECOUNT - line

