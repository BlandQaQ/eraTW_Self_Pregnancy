;颜色运算相关
;设置颜色(含alpha通道)
@k1011AColor, color, alpha
	#FUNCTION
	#DIM alpha
	#DIM color
	SETCOLOR alpha_color(color, LIMIT(alpha, 0, 255))
;重设颜色(含alpha通道)
@k1011RAColor, alpha
	#FUNCTION
	#DIM alpha
	CALLF k1011AColor, GETDEFCOLOR(), alpha
;角色颜色(含alpha通道)
@k1011ACharaColor, target_id, alpha = -999
	#FUNCTION
	#DIM target_id
	#DIM alpha
	#DIM color
	SIF alpha == -999
		alpha = 255
	IF k1011GetSetting("color")
		SELECTCASE k1011GetTalent("性别", target_id)
			CASE 3
				color = 0x00FF00
			CASE 2
				color = 0x0080FF
			CASE 1
				color = 0xFF80FF
		ENDSELECT
	ELSE
		color = GETDEFCOLOR()
	ENDIF
	SETCOLOR alpha_color(color, LIMIT(alpha, 0, 255))
