;12魔法释放
@k1011ComAbl12
	;芙兰不愿意释放魔法
	SIF !K1011AllowMagic
		RETURN 0
	;工作中
	SIF WORKING(TARGET)
		RETURN 0
	;气力不为0
	SIF BASE:1 <= 0
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠
		RETURN 0
	;陪睡中
	SIF CFLAG:陪睡中
		RETURN 0
	;约会中
	SIF CHK_DATENOW(CFLAG:约会中)
		RETURN 0
	;时停
	SIF FLAG:70
		RETURN 0
	;宴会ing
	SIF CFLAG:職種 == JOB_宴会参加
		RETURN 0
	;喝醉了
	SIF k1011Drunk()
		RETURN 0
	RETURN 1

@k1011Com12
	#DIM magicNum
	CALL k1011MagicUi()
	magicNum = RESULT
	;啥都没做
	IF !magicNum
		RETURN -1
	;释放过魔法
	ELSE
		;气力消耗
		DOWNBASE:1 = 50 * magicNum
		TIME += 10 * magicNum
		RETURN 1
	ENDIF
